# EditorConfig: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C source files
[*.{c,h}]
indent_style = space
indent_size = 4
max_line_length = 80

# Makefiles require tabs
[Makefile]
indent_style = tab

# Test files
[tests/*]
indent_style = space
indent_size = 4

# Python files (for test reporting)
[*.py]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Documentation files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files (CI configuration)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2